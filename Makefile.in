TAG = $(shell perl -n -e '/^\s*ARG\s+.+_VERSION\s*=\s*(\d+\.\d+)/ && &{ print $$1; exit }' Dockerfile)

ifdef LATEST
	TAG=latest
endif

ifneq "$(TAG)" ""
    REPO := "$(REPO):$(TAG)"
endif

.PHONY: build
build:
	docker build -t $(REPO) .

.PHONY: nocache
nocache:
	docker build -t $(REPO) --no-cache .

.PHONY: build-versions
build-versions:
	branch=$(REPO); \
	branch=$${branch##*/}; \
	branch=$${branch%:*}; \
	for x in $$(git branch -a | grep $$branch | sed 's,remotes/origin/,,' | sort -u); do \
		git checkout "$$x" && \
		make build || \
		exit 1; \
	done; \
	git checkout master

.PHONY: build-push-versions
build-push-versions: build-versions push-versions
	:

.PHONY: push
push:
	docker push $(REPO)
	[ -f hooks/post_build ] && hooks/post_build

# use 'make push' rather than just 'docker push' to trigger hooks/post_build
.PHONY: push-versions
push-versions:
	branch=$(REPO); \
	branch=$${branch##*/}; \
	branch=$${branch%:*}; \
	for x in $$(git branch -a | grep $$branch | sed 's,remotes/origin/,,' | sort -u); do \
		git checkout "$$x" && \
		make push || \
		exit 1; \
	done; \
	git checkout master

.PHONY: run
# define run separately for each docker image since you want to open different ports
